<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <small>
      <%= @topic.description %>
    </small>
    <% @topic.sponsored_posts.each do |sponsored_post| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
        </h4>
        <%= link_to sponsored_post.title, topic_sponsored_posts_path(@topic, sponsored_post) %>
      </div>
    </div>
    <% end %>
  </div>
  <%  %>
    <div class="col-md-4">
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    </div>
</div>
